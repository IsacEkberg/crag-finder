
<div class="input-group">
    {{!-- The concat thing in the label and input id is to guarantee uniqueness --}}
    <span class="input-group-addon">
        <i class="material-icons">search</i>
    </span>
    {{!--
    <label class="control-label" for="{{concat elementId '-name'}}"></label>
    --}}
  <div class="form-group label-placeholder {{isFocusedState}}">
  {{input
  list=(concat elementId '-inputID')
  value=filter
  input=(action 'autoComplete')
  focus-in=(action 'focusIn')
  focus-out=(action 'focusOut')

  class='form-control'
  placeholder='Search for a crag...'}}

  </div>
    <div {{action 'menuFocusIn' on='keyUp'}} class="dropdown {{dropdownClass}}">
      <ul class="dropdown-menu">
        {{# each filteredList as |area|}}
            <li>{{#link-to "area" area}} {{area.name}} {{/link-to}}</li>
            <li class="divider"></li>
        {{else}}
          <li class="danger"><a>Inga tr√§ffar...</a></li>
        {{/each}}
      </ul>
    </div>
</div>

